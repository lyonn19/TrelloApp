<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrelloApp.Views.ViewCard"
             Title="Card Detail">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Title" TextColor="Black"/>
            <Label Text="{Binding DetailCard.Name}"/>
            <Label Text="Full Description" TextColor="Black"/>
            <Label Text="{Binding DetailCard.Desc}"/>
            <Label Text="Card Attachments" TextColor="Black"/>
            <Label Text="{Binding DetailCard.Attachments}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>